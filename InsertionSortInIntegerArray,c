#include <stdio.h>

int main()
{
    int n, i, j;

    printf("ENTER ARRAY LENGTH\n");
    scanf("%d", &n);

    int ar[n];

    printf("ENTER ARRAY ELEMENTS\n");
    for (int k = 0; k < n; k++)
        scanf("%d", &ar[k]);

    printf("\n");
    printf("ENTERED ARRAY IS AS FOLLOWS\n");
    for (int k = 0; k < n; k++)
        printf("%d ", ar[k]);

    for (i = 0; i < n - 1; i++)
    {
        for (j = i + 1; j > 0; j--)
        {
            if (ar[j] < ar[j - 1])
            {
                int temp = ar[j];
                ar[j] = ar[j - 1];
                ar[j - 1] = temp;
            }
        }
    }

    printf("\n");
    printf("SORTED ARRAY IS AS FOLLOWS\n");
    for (int k = 0; k < n; k++)
        printf("%d ", ar[k]);
    return 0;
}
